/* 水平间距 */
.container {
  display: flex;
  width: 672rpx !important;
}
.container .left {
  width: 88rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container .left image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}
.container .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: #ececec solid 1px;
}
.container .right .name {
  padding-top: 10rpx;
  font-size: 30rpx;
}
.container .right .content {
  padding-top: 10rpx;
  font-size: 32rpx;
}
.container .right .img-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: 40rpx;
}
.container .right .img-box image {
  width: 40%;
  height: 298rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
.container .right .reply-box {
  display: flex;
  flex-direction: column;
  background-color: #eef2f4;
  width: 95%;
}
.container .right .reply-box .reply-item {
  padding: 20rpx;
  padding-bottom: 0rpx;
  font-size: 28rpx;
}
.container .right .reply-box .reply-item:last-of-type {
  padding-bottom: 20rpx;
}
.container .right .reply-box .reply-item .name {
  color: #6c6c6c;
}
.container .right .reply-box .reply-item image {
  width: 100px;
  height: 100px;
  padding-top: 20rpx;
}
.container .right .time {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  font-size: 24rpx;
}
.container .right .goToReply-box {
  display: inline-block;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 15rpx;
  background-color: #eef2f4;
  font-size: 32rpx;
  width: 192rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  background-color: #eef2f4;
}
.container .right .goToReply-box .iconfont {
  font-size: 32rpx;
  margin-right: 10rpx;
  color: #5697c6;
}

