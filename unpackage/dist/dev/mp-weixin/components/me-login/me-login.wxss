/* 水平间距 */
.me-login-container {
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.me-login-container image {
  width: 570rpx;
  height: 404rpx;
  margin-top: -100rpx;
}
.me-login-container .me-login-button-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.me-login-container .me-login-button-box .me-login-button-text {
  color: #101010;
  margin-top: 86rpx;
  text-align: center;
}
.me-login-container .me-login-button-box .me-login-button-text::after {
  content: '';
  display: block;
  background-color: #BBBBBB;
  width: 196rpx;
  height: 1rpx;
  margin-top: 6rpx;
}
.me-login-container .me-login-button-box .me-login-button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}
.me-login-container .me-login-button-box .me-login-button text.wx-login {
  margin-left: 13rpx;
  border-bottom: #101010 solid 1rpx;
  padding-bottom: -1rpx;
}

