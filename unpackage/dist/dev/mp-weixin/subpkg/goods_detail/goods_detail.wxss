.container {
  width: 704rpx;
  background-color: #fff;
  margin: 46rpx auto 0rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}
.container .goods_box {
  width: 672rpx;
  margin: 0 auto;
  padding-top: 12rpx;
}
.container .goods_box .userInfo {
  display: flex;
  justify-content: space-between;
  padding-right: 16rpx;
}
.container .goods_box .userInfo .leftBox {
  display: flex;
  justify-content: flex-start;
}
.container .goods_box .userInfo .leftBox image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.container .goods_box .userInfo .leftBox .infoText {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  line-height: 1.5;
  padding-left: 12rpx;
  margin-left: 5px;
}
.container .goods_box .userInfo .leftBox .infoText .poster {
  font-size: 32rpx;
  color: #605a5a;
}
.container .goods_box .userInfo .leftBox .infoText .post-time {
  font-size: 28rpx;
  color: #999898;
}
.container .goods_box .userInfo .rightBox {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .goods_box .userInfo .rightBox image {
  width: 60rpx;
  height: 60rpx;
}
.container .goods_box .userInfo .rightBox text {
  font-size: 26rpx;
  color: #5f5f5f;
}
.container .goods_box .desc {
  margin-top: 30rpx;
  line-height: 1.5;
  font-size: 32rpx;
}
.container .goods_box .imgBox {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: 20rpx;
}
.container .goods_box .imgBox image {
  width: 30%;
  height: 216rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
.container .goods_box .goodsInfo-box {
  padding-bottom: 42rpx;
}
.container .goods_box .goodsInfo-box .goodsInfo-item {
  font-size: 32rpx;
  display: flex;
  justify-content: flex-start;
  margin-top: 42rpx;
  padding-bottom: 42rpx;
  border-bottom: 2rpx #eee solid;
}
.container .goods_box .goodsInfo-box .goodsInfo-item:last-of-type {
  margin-bottom: 0rpx;
}
.container .goods_box .goodsInfo-box .goodsInfo-item .title {
  color: #9d9c9c;
  width: 150rpx;
}
.container .goods_box .goodsInfo-box .goodsInfo-item .content {
  color: #000;
  flex: 1;
}
.container .goods_box .goodsInfo-box .bottomIconBar {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.container .goods_box .goodsInfo-box .bottomIconBar .iconfont {
  font-size: 52rpx;
  margin-right: 40rpx;
  padding-top: 30rpx;
}
.bottom-bar {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 20rpx 0rpx;
  border-top: solid 1px #e8e8e8;
}
.bottom-bar .bottomContainer {
  margin-left: 30rpx;
}
.bottom-bar .bottomContainer .iconBar {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.bottom-bar .bottomContainer .iconBar .bottomBar-icon {
  font-size: 50rpx !important;
  color: #989eb4 !important;
  padding: 10rpx 0rpx;
  padding-right: 20rpx;
}
.bottom-bar .bottomContainer .commentBar {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.bottom-bar .bottomContainer .commentBar .talk {
  position: relative;
}
.bottom-bar .bottomContainer .commentBar .talk uni-icons.my-icon-edit {
  position: absolute;
  left: 10rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.bottom-bar .bottomContainer .commentBar .talk input.input-talk {
  width: 450rpx;
  height: 78rpx;
  background-color: #eef2f4;
  border-radius: 166rpx;
  padding-left: 68rpx;
  padding-right: 30rpx;
  word-break: break-all;
}
.bottom-bar .bottomContainer .commentBar .zhuanfaContainer .zhuanfaBox {
  width: 156rpx;
  display: flex;
  align-items: center;
}
.bottom-bar .bottomContainer .commentBar .zhuanfaContainer .zhuanfaBox .zhuanFaText {
  color: #999898;
  font-size: 28rpx;
}
.bottom-bar .bottomContainer .commentBar .zhuanfaContainer .zhuanfaBox image {
  width: 60rpx;
  height: 60rpx;
}
.bottom-bar .bottomContainer .commentBar .sendBtn {
  width: 146rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 39rpx;
  margin-left: 10rpx;
  text-align: center;
  background-color: #add3e8;
}
.comment-container {
  width: 704rpx !important;
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 200rpx;
  padding-bottom: 104rpx;
  border-radius: 20rpx;
}
.comment-container .goods_box {
  width: 672rpx;
  margin: 0 auto;
  padding-top: 12rpx;
}
.comment-container .goods_box .com-count {
  padding-top: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: #ececec solid 1px;
}
.fP-active {
  position: absolute !important;
  left: 0px !important;
  top: 0px !important;
  -webkit-transform: translateY(-100%) !important;
          transform: translateY(-100%) !important;
}

