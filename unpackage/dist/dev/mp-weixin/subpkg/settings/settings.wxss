/* 水平间距 */
page {
  height: 100%;
  background-color: #fff !important;
}
.container {
  width: 702rpx;
  margin: 0 auto;
  height: 100%;
  padding-top: 50rpx;
}
.container .box {
  background-color: #eef4f7;
  padding: 20rpx 0rpx;
  padding-left: 40rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
}
.container .box .box-item {
  font-size: 40rpx;
  padding: 12rpx 0rpx;
}
.container .box .box-item:first-of-type::after {
  content: "";
  display: block;
  background-color: #bbb;
  opacity: 0.55;
  width: 576rpx;
  height: 2rpx;
  margin-top: 15px;
}
.container .btn {
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  outline: none;
  border: none;
  color: #fff;
  background-color: #95c8e3;
  font-size: 35rpx;
}

