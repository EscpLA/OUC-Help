page {
  height: 100%;
  background-color: #fff;
}
.container {
  height: 100%;
  width: 704rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.container .avatar {
  margin-top: 66rpx;
  position: relative;
}
.container .avatar image {
  width: 212rpx;
  height: 212rpx;
  border-radius: 50%;
}
.container .avatar .camera-box {
  position: absolute;
  bottom: 0;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #bbbbbb;
  border-radius: 50%;
}
.container .profile-item {
  width: 95%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: #ededed 1px solid;
  padding: 30rpx 0rpx;
}
.container .profile-item:first-of-type {
  margin-top: 56rpx;
}
.container .profile-item .key {
  background-color: #eef4f7;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}
.container .profile-item .value text {
  padding-right: 10rpx;
}
.container .profile-item .dataPickerBox {
  display: flex;
}
.container .profile-item .dataPickerBox .gradePicker {
  max-width: 88px;
  margin-right: 30rpx;
}
.container .profile-item .dataPickerBox .majorPicker {
  max-width: 120px;
}

